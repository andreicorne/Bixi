<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/md_theme_surfaceVariant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/iv_schedule"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_schedule"
            app:tint="@color/md_theme_primary" />
        <TextView
            android:id="@+id/tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_schedule"
            android:layout_marginTop="17dp"
            android:layout_marginStart="6dp"
            android:text="Detalii"
            android:textSize="13sp"
            android:textColor="@color/md_theme_primary"/>

        <TextView
            android:id="@+id/tv_assignee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titlu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/tv_schedule"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Detalii"
            android:textSize="14sp"
            android:layout_below="@+id/tv_title"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
